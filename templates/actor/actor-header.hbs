<header class="sheet-header">
  <div class="profile-img-wrapper">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" data-action="onEditImage" title="{{name}}" height="100" width="100" />
  </div>
  <div class="header-fields">
    <div class="flexrow flex-h-gap-10">
      <div class="flexcolumn">
        <div class="flexrow flex-h-gap-5">
          <label class="flex0" for="name">{{localize 'EXALTED2E.SheetLabels.Name'}}:</label> 
          <input id="name" name="name" type="text" value="{{actor.name}}" placeholder="Name" />
        </div>
        <div class="flexrow flex-h-gap-5">
          <label class="flex0" for="caste">{{localize 'EXALTED2E.SheetLabels.Caste'}}:</label> 
          <select id="type" name="system.caste" data-type="String">
            {{selectOptions castes selected=system.caste localize=true}}
          </select>
        </div>
        <div class="flexrow flex-h-gap-5">
                    
        </div>
      </div>
      <div class="flexcolumn">
        <div class="flexrow flex-h-gap-5">
          <label class="flex0" for="concept">{{localize 'EXALTED2E.SheetLabels.Concept'}}:</label> 
          <input id="concept"name="system.concept" type="text" value="{{system.concept}}" placeholder="" />
        </div>
        <div class="flexrow flex-h-gap-5">
          <label class="flex0" for="motivation">{{localize 'EXALTED2E.SheetLabels.Motivation'}}:</label> 
          <input id="motivation" name="system.motivation" type="text" value="{{system.motivation}}" placeholder="" />
        </div>
        <div class="flexrow flex-h-gap-5">
          <label class="flex0" for="anima">{{localize 'EXALTED2E.SheetLabels.Anima'}}:</label> 
          <input id="anima" name="system.anima" type="text" value="{{system.anima}}" placeholder="" />
        </div>
      </div>
    </div>
  </div>
</header>